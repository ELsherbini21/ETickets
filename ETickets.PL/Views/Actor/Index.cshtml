@model IEnumerable<ActorViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<div class="container mt-5">
    <h1 class="mb-3 display-3 text-muted text-center"> All Actors </h1>
    <div class="row justify-content-center mb-3">
        <div class="col-md-4">
            <partial name="CreateButtonPartial" model="null" />
        </div>
    </div>


    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center">
                        <thead class="thead-dark">
                            <tr>
                                <th>Profile Picture</th>
                                <th>Full Name</th>
                                <th>Bio</th>
                                <th>Details</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var actor in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@actor.ProfilePictureUrl" alt="@actor.FullName" class="img-fluid rounded-circle" style="max-width: 100px;" />
                                    </td>
                                    <td>@actor.FullName</td>
                                    <td>@actor.Bio</td>
                                        <partial name="_CrudButtonsPartial" model="@actor.Id" />
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }


    else
    {
        <div class="alert alert-warning mt-4" role="alert">
            <h3 class="text-center">There are no actors.</h3>
        </div>
    }


</div>


