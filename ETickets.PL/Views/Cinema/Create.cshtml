@model CinemaViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1 class="text-muted text-center"> Add New Cinema </h1>

<hr class="w-50 m-auto mb-4"/>
<div class="row ">
    <div class="col-md-8 offset-2">
        <form asp-action="Create" method="post">
            <partial name="PartialViews/CreateEditCinemaPartial" model="null" />

            <div class="form-group my-3">
                <a asp-action="Index" class="btn btn-primary d-flex float-end">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success d-flex float-start" />
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}