@model CinemaViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1 class="text-muted text-center"> Edit @Model.Name </h1>

<hr />


<hr class="w-50 m-auto mb-4" />
<div class="row ">
    <div class="col-md-8 offset-2">
        <form asp-action="Edit" method="post" asp-route-id="@Model.Id">
            <partial name="PartialViews/CreateEditCinemaPartial" model="@Model" />

            <div class="form-group my-3">
                <a asp-action="Index" class="btn btn-primary d-flex float-end">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success d-flex float-start" />
            </div>

        </form>
    </div>
</div>
