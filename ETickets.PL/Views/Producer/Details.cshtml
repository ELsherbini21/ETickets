@model ProducerViewModel


@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<div class="mt-3">
    <h1 class="display-3 text-center"> @Model.FullName</h1>
</div>


<hr />

<div class="row">

    <partial name="PartialViews/DetailsDeleteProducerPartialView" model="Model" />

    @if (Model.Movies.Count() > 0)
    {

        <div class="container mt-5">
            <h2 class="text-center mb-4">Movie List</h2>
            <hr class="w-50 m-auto" />
            <ul class="movie-list" style="list-style-type: none; padding: 0;">
                @foreach (var item in Model.Movies)
                {
                    <li class="movie-list-item"
                        style="padding: 10px; background-color: #f8f9fa; margin-bottom: 5px; border-radius: 5px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);">
                        @item.Name
                    </li>

                }
            </ul>
        </div>
    }
    else
    {
        <div class="container mt-5">
            <h2 class="text-center text-danger mb-4">There no Movie To Display Sir </h2>
            <hr class="w-50 m-auto" />
        </div>
    }



</div>

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success me-4" style="border-radius: 20px; padding: 5px 15px;">
                <i class="bi bi-pencil-fill mr-2"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-info" style="border-radius: 20px; padding: 5px 15px;">
                <i class="bi bi-arrow-right-circle mr-2"></i> Return
            </a>
        </div>
    </div>
</div>






